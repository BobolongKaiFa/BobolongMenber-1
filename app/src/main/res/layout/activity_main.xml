<me.hwang.widgets.SmartPullableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_pullable"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<ScrollView
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/main_2">
        <ImageView
            android:id="@+id/iv_menu"
			android:layout_width="20dp"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:padding="10dp"
			android:src="@mipmap/menu"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"
			/>
        <ImageView
            android:id="@+id/imageView1"
            android:scaleType="centerInside"
            android:layout_width="100dip"
            android:layout_height="50dip"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:src="@mipmap/logo_t" />
        <TextView
            android:id="@+id/messageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:padding="10dp"
			android:textSize="20sp"
			android:gravity="center"
			android:textStyle="bold"
			android:textColor="@color/white"
            android:text="消息" />
        <TextView
            android:id="@+id/signBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:padding="10dp"
			android:textSize="20sp"
			android:textStyle="bold"
			android:gravity="center"
			android:textColor="@color/white"
            android:text="签到" />
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="10dp">
        
	    <ImageView
            android:id="@+id/touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
			android:src="@drawable/circular_pthoto"
			android:layout_gravity="center_vertical"/>
		<RelativeLayout
			android:id="@+id/member_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:orientation="vertical">
				<TextView
					android:id="@+id/name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="姓名: " />
				<TextView
					android:id="@+id/tv_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@+id/name"/>
				<TextView
					android:id="@+id/card"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/name"
					android:layout_marginTop="5dp"
					android:text="卡号：" />
				<TextView
					android:id="@+id/tv_card_no"
					android:layout_below="@+id/tv_name"
					android:layout_toRightOf="@+id/card"
					android:layout_marginTop="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/scores"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/card"
					android:layout_marginTop="5dp"
					android:text="积分：" />
				<TextView
					android:id="@+id/tv_point"
					android:layout_toRightOf="@+id/scores"
					android:layout_below="@+id/tv_card_no"
					android:layout_marginTop="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/grades"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_below="@+id/scores"
					android:text="等级：" />
				<TextView
					android:id="@+id/tv_level"
					android:layout_below="@+id/tv_point"
					android:layout_toRightOf="@+id/grades"
					android:layout_marginTop="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/sexTxt"
					android:layout_below="@+id/grades"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="性别: "
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_gender"
					android:layout_below="@+id/tv_level"
					android:layout_toRightOf="@+id/sexTxt"
					android:layout_marginTop="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
				<TextView
					android:id="@+id/ageTxt"
					android:layout_below="@+id/sexTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="年龄："
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_age"
					android:layout_below="@+id/tv_gender"
					android:layout_toRightOf="@id/ageTxt"
					android:layout_marginTop="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
				<TextView
					android:id="@+id/nationTxt"
					android:layout_below="@+id/ageTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="民族："
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_nation"
					android:layout_below="@+id/tv_age"
					android:layout_toRightOf="@+id/nationTxt"
					android:layout_marginTop="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
				<TextView
					android:id="@+id/birthdayTxt"
					android:layout_below="@id/nationTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="生日："
					android:visibility="gone"/>
				<TextView
					android:id="@+id/tv_birthday"
					android:layout_below="@id/tv_nation"
					android:layout_toRightOf="@+id/birthdayTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
				<ImageView
					android:id="@+id/iv_moreInfo"
					android:layout_width="wrap_content"
					android:layout_below="@+id/birthdayTxt"
					android:layout_height="25dp"
					android:layout_gravity="center"
					android:src="@mipmap/mul_down"/>
		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginRight="5dp"
			android:gravity="right">
			<TextView
				android:id="@+id/editInfo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textColor="@color/login_btn_bac"
				android:textStyle="bold"
				android:textSize="18sp"
				android:text="编辑" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/main_2"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@mipmap/julebu_w"
			/>
		<TextView
			android:id="@+id/textView7"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="@color/white"
			android:text="我的俱乐部" />
		<TextView
			android:id="@+id/cmoreactivity"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:gravity="right"
			android:padding="5dp"
			android:textColor="@color/white"
			android:text="更多>>"
			android:textSize="18sp" />
	</LinearLayout>
	<com.stx.xhb.xbanner.XBanner
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/myClubBanner"
		android:layout_width="match_parent"
		android:layout_height="180dp"
		app:AutoPlayTime="3000"
		app:isAutoPlay="true"
		app:pointsContainerBackground="#44aaaaaa"
		app:pointNormal="@drawable/shape_noraml"
		app:pointSelect="@drawable/shape_selected"
		app:pointsPosition="RIGHT"
		app:tipTextSize="12sp"
		app:isShowNumberIndicator="true"
		app:isShowIndicatorOnlyOne="true"
		app:pageChangeDuration="800"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/main_2"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@mipmap/remen_w"
			/>
			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textSize="18sp"
				android:textColor="@color/white"
				android:textStyle="bold"
				android:text="热门活动" />
			<TextView
				android:id="@+id/rmoreactivity"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:textSize="18sp"
				android:textColor="@color/white"
				android:gravity="right"
				android:padding="5dp"
				android:text="更多>>" />
</LinearLayout>
	<com.stx.xhb.xbanner.XBanner
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/recommendBanner"
		android:layout_width="match_parent"
		android:layout_height="180dp"
		app:AutoPlayTime="3000"
		app:isAutoPlay="true"
		app:pointsContainerBackground="#44aaaaaa"
		app:pointNormal="@drawable/shape_noraml"
		app:pointSelect="@drawable/shape_selected"
		app:pointsPosition="RIGHT"
		app:tipTextSize="12sp"
		app:isShowNumberIndicator="true"
		app:isShowIndicatorOnlyOne="true"
		app:pageChangeDuration="800"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/main_2"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@mipmap/quanbu_w"
			/>
		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:text="所有活动" />
		<TextView
			android:id="@+id/moreactivity"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:gravity="right"
			android:padding="5dp"
			android:text="更多>>" />
	</LinearLayout>
	<com.stx.xhb.xbanner.XBanner
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/allBanner"
		android:layout_width="match_parent"
		android:layout_height="180dp"
		app:AutoPlayTime="3000"
		app:isAutoPlay="true"
		app:pointsContainerBackground="#44aaaaaa"
		app:pointNormal="@drawable/shape_noraml"
		app:pointSelect="@drawable/shape_selected"
		app:pointsPosition="RIGHT"
		app:tipTextSize="12sp"
		app:isShowNumberIndicator="true"
		app:isShowIndicatorOnlyOne="true"
		app:pageChangeDuration="800"/>

	<!--<View
		android:id="@+id/view2"
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="#cccccc" />
	<TextView
		android:id="@+id/textView6"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textSize="20sp"
		android:text="活动标签列表" />
	<android.support.v7.widget.RecyclerView
		android:id="@+id/rc_tags_list"
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>-->
</LinearLayout>
</ScrollView>
</me.hwang.widgets.SmartPullableLayout>