<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/project_detail_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_title"
            android:textColor="@color/login_btn_bac"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <include layout="@layout/common_line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_create_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_btn_bac"
                android:text="开始时间:"/>
            <TextView
                android:id="@+id/txt_create_time"
                android:textColor="@color/login_btn_bac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_state_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_btn_bac"
                android:text="项目状态:"/>
            <TextView
                android:id="@+id/txt_state"
                android:textColor="@color/login_btn_bac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_checkin_end_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_btn_bac"
                android:text="报名结束时间:"/>
            <TextView
                android:id="@+id/txt_checkin_end_time"
                android:textColor="@color/login_btn_bac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>